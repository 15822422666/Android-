<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <ImageView
        android:id="@+id/logo_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/userAccount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_image"
        android:layout_toLeftOf="@+id/logo_image"
        android:text="账号"
        android:textSize="24sp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/userAccount_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userAccount_text"
        android:layout_below="@+id/logo_image"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:singleLine="true"
        android:text="admin"/>

    <TextView
        android:id="@+id/userPassword_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userAccount_text"
        android:layout_toLeftOf="@+id/logo_image"
        android:text="密码"
        android:textSize="24sp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/userPassword_edit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/userPassword_text"
        android:layout_below="@+id/userAccount_text"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:inputType="textPassword"
        android:text="123456"/>

    <Button
        android:id="@+id/changePassword_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_text"
        android:text="忘记密码"
        android:layout_below="@+id/userPassword_text"
        android:layout_alignRight="@+id/userPassword_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"/>

    <CheckBox
        android:id="@+id/remember_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记住密码"
        android:layout_alignLeft="@+id/userPassword_text"
        android:layout_below="@+id/userPassword_text"
        android:layout_marginTop="18sp"
        />

    <Button
        android:id="@+id/logIn_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/changePassword_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:text="登录"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/registered_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="注册"
        android:textSize="24sp"/>

</RelativeLayout>